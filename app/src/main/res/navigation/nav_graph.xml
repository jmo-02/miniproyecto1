<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- Home Inventory -->
    <fragment
        android:id="@+id/homeInventoryFragment"
        android:name="com.example.miniproyecto1.view.fragment.HomeInventoryFragment"
        android:label="fragment_home_inventory"
        tools:layout="@layout/fragment_home_inventory">

        <action
            android:id="@+id/action_homeInventoryFragment_to_addItemFragment"
            app:destination="@id/addItemFragment" />

        <action
            android:id="@+id/action_homeInventoryFragment_to_itemDetailsFragment"
            app:destination="@id/itemDetailsFragment" />

        <action
            android:id="@+id/action_homeInventoryFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- Add Item -->
    <fragment
        android:id="@+id/addItemFragment"
        android:name="com.example.miniproyecto1.view.fragment.AddItemFragment"
        android:label="fragment_add_item"
        tools:layout="@layout/fragment_add_item">
        <action
            android:id="@+id/action_addItemFragment_to_homeInventoryFragment"
            app:destination="@id/homeInventoryFragment" />
    </fragment>

    <!-- Details Item -->
    <fragment
        android:id="@+id/itemDetailsFragment"
        android:name="com.example.miniproyecto1.view.fragment.ItemDetailsFragment"
        android:label="fragment_item_details"
        tools:layout="@layout/fragment_item_details">

        <!--️ Argumento que recibe el código del producto -->
        <argument
            android:name="code"
            app:argType="integer" />

        <action
            android:id="@+id/action_itemDetailsFragment_to_itemEditFragment"
            app:destination="@id/itemEditFragment" />
    </fragment>

    <!-- Edit item -->
    <fragment
        android:id="@+id/itemEditFragment"
        android:name="com.example.miniproyecto1.view.fragment.ItemEditFragment"
        android:label="fragment_item_edit"
        tools:layout="@layout/fragment_item_edit">
        <action
            android:id="@+id/action_itemEditFragment_to_homeInventoryFragment"
            app:destination="@id/homeInventoryFragment" />
    </fragment>

    <!-- Login -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.miniproyecto1.view.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeInventoryFragment"
            app:destination="@id/homeInventoryFragment" />
    </fragment>

</navigation>
