<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inv_widget_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_bg"
    android:padding="12dp">

    <ImageView
        android:id="@+id/inv_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@string/inv_logo_desc"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/inv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inventory"
        android:textColor="@color/orange_button"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_alignStart="@id/inv_logo"
        android:layout_below="@id/inv_logo"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/inv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cuánto tengo de inventario?"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/inv_logo"
        android:layout_marginStart="8dp"/>

    <ImageView
        android:id="@+id/inv_toggle_eye"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_eye_open"
        android:contentDescription="@string/inv_toggle_eye_desc"
        android:layout_alignTop="@id/inv_question"
        android:layout_toStartOf="@id/inv_question"
        android:layout_marginEnd="4dp" />

    <TextView
        android:id="@+id/inv_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ ****"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/inv_question"
        android:layout_alignEnd="@id/inv_question"
        android:layout_marginTop="4dp"/>

    <ImageView
        android:id="@+id/inv_manage_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_inventory_manage"

        android:contentDescription="@string/inv_manage_icon_desc"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/inv_manage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestionar inventario"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_toStartOf="@id/inv_manage_icon"
        android:layout_alignBottom="@id/inv_manage_icon"
        android:layout_marginEnd="8dp"/>
</RelativeLayout>